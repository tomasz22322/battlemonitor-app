<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp">

        <!-- pasek statusu -->
        <View
            android:id="@+id/vStatus"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@color/status_unknown" />

        <!-- nick + meta -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="PlayerName"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Country: PL\nSteam ID: 123"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:visibility="gone" />
        </LinearLayout>

        <!-- powiadomienia -->
        <TextView
            android:id="@+id/btnNotify"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_notify_button"
            android:gravity="center"
            android:text="ðŸ””"
            android:textColor="@color/accent"
            android:textSize="14sp" />

        <!-- usuÅ„ -->
        <TextView
            android:id="@+id/btnRemove"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_remove_button"
            android:gravity="center"
            android:text="âœ•"
            android:textColor="@color/danger"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
