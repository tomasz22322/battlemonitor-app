<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <!-- pasek statusu -->
        <View
            android:id="@+id/vStatus"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="12dp"
            android:background="@color/status_unknown" />

        <!-- nick + meta -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="PlayerName"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="1dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Country: PL\nSteam ID: 123"
                android:textColor="@color/text_hint"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- powiadomienia -->
        <TextView
            android:id="@+id/btnNotify"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_notify_button"
            android:gravity="center"
            android:text="ðŸ””"
            android:textColor="@color/accent"
            android:textSize="14sp" />

        <!-- usuÅ„ -->
        <TextView
            android:id="@+id/btnRemove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_remove_button"
            android:gravity="center"
            android:text="âœ•"
            android:textColor="@color/danger"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
